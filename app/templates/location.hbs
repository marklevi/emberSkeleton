<div class="row collapse">
    <div class="small-12 column">
        <div class="location__hero" style="background-image: url('{{model.heroImageUrl}}')">
            <div class="location__hero-overlay">
                <h1>{{model.title}}</h1>
            </div>
        </div>
        {{g-maps class="location__map" markers=markers lat=model.addressLocation.lat lng=model.addressLocation.lon zoom=17
        draggable=false showZoomControl=false scrollwheel=false
        showMapTypeControl=false disableDefaultUI=true clickableIcons=false
        disableDoubleClickZoom=true}}
        <p class="location__description">{{model.description}}</p>
        <p class="location__opening-hours">{{{model.openingHours}}}</p>
        <p class="location__address-text">{{{model.addressText}}}</p>
    </div>
</div>
